---
import type { ComponentInstance } from "astro";
import Icon from "astro-icon";

export interface Props {
  text: string;
  icon?: ComponentInstance;
  path: string;
  additionalProps?: string;
  theme?: string;
  target?: string;
}

if (Astro.props.theme === "dark") {
  const themeProps = "text-default-900 border-default-900";
} else {
  const themeProps = "text-white border-white";
}

const { text, icon, path, additionalProps, themeProps, target } = Astro.props;
---

<a
  href={path}
  target={target ? target : "_self"}
  class={`${themeProps} hover:cursor-pointer uppercase rounded-lg tracking-wider 
                      border hover:text-brandTeal hover:border-brandTeal transition-all 
                      px-4 py-3 inline-block ${additionalProps}`}
>
  {icon ? <Icon name={icon} class="h-6 w-6 inline mr-2" /> : null}
  {text}
</a>
