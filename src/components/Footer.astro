---
import Icon from "astro-icon";
import { Image } from "@astrojs/image/components";
import logoWhite from '../images/logo-white.svg';
---

<div class="bg-gradient-to-t from-default-900">
  <div
    class="flex flex-col sm:flex-row px-6 md:px-12 space-y-6 justify-between max-w-3xl md:mx-auto lg:px-0 py-16"
  >
    <div class="flex flex-row sm:flex-col justify-between">
      <div class="mb-5"><Image src={logoWhite} width={'auto'} height={'auto'}/></div>
      <div>
        <p>Designed and Developed by</p>
        <p>Matthew Berger</p>
        <div class="h-6"></div>
        <div class="inline">
          Made with <Icon name="clarity:heart-solid" class="h-6 w-6 inline mx-0.5"/> in Toronto
        </div>
      </div>
    </div>
    <div>
      <h5 class="text-2xl font-bold mb-4 hidden sm:block">Get in touch!</h5>
      <ul
        class="flex flex-row sm:flex-col md:text-right sm:space-y-2 justify-between mt-12 sm:mt-0"
      >
        <li>
          <a
            class=" hover:text-brandTeal transition-all"
            href="https://twitter.com/itsmattberger"
            target="_blank"
            rel="noreferrer"
          >
            Twitter</a>
        </li>
        <li>
          <a
            class=" hover:text-brandTeal transition-all"
            href="https://github.com/bergermaestro"
            target="_blank"
            rel="noreferrer"
          >
            Github</a>
        </li>
        <li>
          <a
            class=" hover:text-brandTeal transition-all"
            href="https://www.linkedin.com/in/matthewaberger/"
            target="_blank"
            rel="noreferrer"
          >
            LinkedIn</a>
        </li>
        <li>
          <a
            class=" hover:text-brandTeal transition-all"
            href="mailto:matthew17berger@gmail.com"
            target="_blank"
            rel="noreferrer"
          >
            Email</a>
        </li>
      </ul>
    </div>
  </div>
</div>
