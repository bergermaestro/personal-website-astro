---
import Icon from "astro-icon";
import OutlineButton from "./Buttons/OutlineButton.astro";
import Resume from "../../public/Matthew-Berger-Resume-April-2023.pdf";
---

<nav class="bg-gradient-to-b from-default-900 py-6">
  <div
    class="mx-auto flex flex-row items-center justify-between px-6 md:px-14 lg:max-w-6xl lg:px-6"
  >
    <span class="mr-10 cursor-pointer pb-3 sm:py-0">
      <a href="/">
        <Icon name="logo" class="w-20" />
      </a>
    </span>

    <label class="relative lg:hidden">
      <input class="peer hidden" type="checkbox" />
      <Icon name="eva:menu-fill" class="w-10 cursor-pointer" />
      <div
        class="bg-brandTeal absolute right-0 top-10 z-10 max-h-0 overflow-hidden rounded-lg text-center text-lg uppercase shadow-2xl transition-all duration-150 peer-checked:max-h-96"
      >
        <a
          href="/"
          class="block px-10 py-4 transition-colors hover:bg-default-400/25"
          >Home</a
        >
        <a
          href="/blog"
          class="block px-10 py-4 transition-colors hover:bg-default-400/25"
          >Blog</a
        >
        <a
          href="/about"
          class="block px-10 py-4 transition-colors hover:bg-default-400/25"
          >About</a
        >
        <div class="cursor-pointer pb-2 pt-2 hover:bg-default-400/25">
          <a
            href={Resume}
            target="_blank"
            class="inline-block rounded-lg border px-4 py-3 tracking-wider transition-colors"
            >Resume</a
          >
        </div>
      </div>
    </label>

    <div
      class="hidden w-full flex-row flex-wrap items-center justify-between uppercase sm:w-auto sm:justify-center sm:space-x-12 lg:flex"
    >
      <a href="/" class="hover:text-brandTeal transition-colors">Home</a>
      <a href="/blog" class="hover:text-brandTeal transition-colors">Blog</a>
      <a href="/about" class="hover:text-brandTeal transition-colors">About</a>
      <OutlineButton text="Resume" path={Resume} target="_blank" />
    </div>
  </div>
</nav>
