---
import { Image } from "astro:assets";
import SolidButton from "./buttons/SolidButton.astro";

export interface Props {
  type: string;
  title: string;
  summary: string;
  image?: string;
  slug: string;
}

const { type, title, summary, image, slug } = Astro.props;
---

<div
  class="flex gap-8 border-b border-livid-500 px-4 py-8 transition-transform duration-300"
>
  <div class="basis-3/4">
    <h3 class="font-phudu">{type}</h3>
    <h2 class="font-phudu text-2xl font-medium text-yellow-600">
      {title}
    </h2>
    <p class="max-w-[55ch] leading-relaxed font-width-[92]">
      {summary}
    </p>
    <SolidButton
      text="Read More"
      background="yellow"
      foreground="livid"
      path={slug}
    />
  </div>
  <div class="basis-1/4">
    {
      image && (
        <Image
          src={image}
          class="aspect-square rounded-lg object-cover"
          width={"200"}
          height={"200"}
          alt={"Blog Header Image"}
          format={"webp"}
        />
      )
    }
  </div>
</div>
