---
import { Image } from "@astrojs/image/components";
import ResumeImage from "../images/resume-mockup.png";
import SolidButton from "./Buttons/SolidButton.astro";
import Resume from "../../public/Matthew-Berger-Resume-April-2023.pdf"
---

<div class="inline-flex bg-default-900 rounded-lg shadow-lg my-6">
  <div class="p-4 mx-4 flex items-center">
    <Image src={ResumeImage} alt="" format={"webp"} />
  </div>
  <div
    class="px-8 py-12 space-y-4 bg-[url('../../images/resume-background.png')] bg-contain bg-no-repeat bg-opacity-30"
  >
    <h4 class="uppercase text-xl tracking-wider">File Download</h4>
    <h2 class="font-bold text-4xl">See My Resume</h2>
    <SolidButton
      text="Download Here"
      path={Resume}
      target="_blank"
    />
  </div>
</div>
