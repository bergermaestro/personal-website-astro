---
import Footer from '../components/Footer.astro';
import Nav from '../components/Nav.astro';

export interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en" class="bg-default-900 text-white font-poppins">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<link href="https://fonts.googleapis.com/css2?family=Crete+Round&family=Poppins:wght@300;400;700&display=swap" rel="stylesheet"/>
		<meta name="generator" content={Astro.generator} />
		<meta name="description" content="Matthew Berger's personal website">
		<meta name="author" content="Matthew Berger">
		<title>{title}</title>
	</head>
	<body class="bg-default-400">
		<Nav/>
		<div class="px-6 md:px-14 lg:px-6 lg:max-w-5xl mx-auto">
			<slot/>
		</div>
		<Footer/>
	</body>
</html>