---
import OutlineButton from "../components/Buttons/OutlineButton.astro";
import Footer from "../components/Footer.astro";
import Nav from "../components/Nav.astro";
import Spacer from "../components/Spacer.astro";
import MainLayout from "./MainLayout.astro";

export interface Props {
  content: {
    title: string;
    summary: string;
    pubDate?: string;
    updatedDate?: string;
    heroImage?: string;
    projectLinks: Array<{ url: string; displayText: string }>;
    rosetta: object;
  };
}

const rosetta: any = {
  github: { icon: "ri:github-fill", text: "View Source Code" },
  figma: { icon: "ri:github-fill", text: "View on Figma" },
  site: { icon: "ph:link-simple-bold", text: "View Project" },
};

const {
  content: { title, summary, pubDate, updatedDate, heroImage, projectLinks },
} = Astro.props;
---

<MainLayout title={`Matthew Berger | ${title}`}>
  <div class="mx-auto px-6 md:px-14 lg:max-w-6xl lg:px-6">
    <h1 class="mb-1 mt-12 text-5xl font-bold leading-[1.2]">
      {title}
    </h1>
    <h2 class="text-1xl text-brandTeal mb-6">{pubDate}</h2>
    <div class="mb-20 mt-16">
      {
        projectLinks &&
          projectLinks.map((link: any) => (
            <div class="mb-6 mr-6 inline-block">
              <OutlineButton
                text={rosetta[link.name].text}
                path={link.url}
                icon={rosetta[link.name].icon}
                theme="light"
              />
            </div>
          ))
      }
    </div>
    <article class="prose prose-cyan prose-invert">
      <slot />
    </article>
  </div>
  <Spacer />
</MainLayout>
